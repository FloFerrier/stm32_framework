        {
			"name": "Launch Debug on target",
			"type": "cppdbg",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"program": "${workspaceRoot}/bin/stm32f446retx_Debug.elf",
			"MIMode": "gdb",
			"miDebuggerPath": "gdb-multiarch",
			"miDebuggerServerAddress": "localhost:3333",
            "setupCommands": [
                {
                    "text": "set remotetimeout 2"
                }
            ],
			"useExtendedRemote": true,
			/*"postRemoteConnectCommands": [
				{"text": "monitor reset 1"},
				{"text": "load"}
			]*/
		}
